<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/check_cafe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:minWidth="60dp"
            android:text="Café" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:src="@drawable/cafe"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Quantidade" />

        <EditText
            android:id="@+id/edtQtdCafe"
            android:layout_width="51dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:inputType="number"
            android:text="0" />
        <TextView
            android:id="@+id/txtPrecoCafe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1$"
            android:visibility="gone"/>





    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/check_chocolate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:minWidth="60dp"
            android:text="Chocolate" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:src="@drawable/chocolate"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Quantidade" />

        <EditText
            android:id="@+id/edtQtdChocolate"
            android:layout_width="51dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:inputType="number"
            android:text="0" />
        <TextView
            android:id="@+id/txtPrecoChocolate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1$"
            android:visibility="gone"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/check_pao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:minWidth="60dp"
            android:text="Pão" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:src="@drawable/pao"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Quantidade" />

        <EditText
            android:id="@+id/edtQtdPao"
            android:layout_width="51dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:inputType="number"
            android:text="0" />
        <TextView
            android:id="@+id/txtPrecoPao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1$"
            android:visibility="gone"/>





    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Realizar pedido"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_marginHorizontal="50dp"
        android:id="@+id/btnPedido"/>

</LinearLayout>