<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ToggleButton
        android:id="@+id/tbLigado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:text="ToggleButton"
        android:textOn="DESATIVADO"
        android:textOff="DIGITE"
        app:layout_constraintEnd_toStartOf="@+id/swMostrar"
        app:layout_constraintStart_toEndOf="@+id/btnConfirmar"
        app:layout_constraintTop_toBottomOf="@+id/edtNomeCompleto" />

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="109dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="16dp"
        android:text="RETRATO"
        android:textColor="#F44336"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/edtNomeCompleto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtNomeCompleto"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="Digite aqui o nome completo"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/tbLigado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitulo" />

    <Button
        android:id="@+id/btnConfirmar"
        android:layout_width="124dp"
        android:layout_height="49dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:text="CONFIRMAR"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/tbLigado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtNomeCompleto" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/swMostrar"
        android:layout_width="129dp"
        android:layout_height="54dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="Escrelha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tbLigado"
        app:layout_constraintTop_toBottomOf="@+id/edtNomeCompleto" />
</androidx.constraintlayout.widget.ConstraintLayout>