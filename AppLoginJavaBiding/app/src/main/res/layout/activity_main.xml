<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txtBoasVindas"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_weight="1"
        android:background="#112E51"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="BEM VINDO"
        android:textColor="#fff"
        android:textSize="50sp" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="181dp"
        android:layout_marginTop="20dp"
        android:layout_height="119dp"
        android:layout_weight="1"

        android:src="@drawable/loginapp" />
    <TextView
        android:id="@+id/txtDigite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Digite seus dados para entrar"
        android:textColor="#112E51"

        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:padding="5sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Login: "
            android:padding="10sp"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/edtLogin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"

            android:hint="Digite seu Login"
            android:padding="10sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtSenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Senha: "
            android:padding="10sp"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/edtSenha"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:inputType="textPassword"
            android:hint="Digite sua Senha"
            android:padding="10sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnEntrar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Entrar"
            android:backgroundTint="#112E51"
            android:gravity="center"
            />
        <Button
            android:id="@+id/btnCandelar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:text="Sair"
            android:layout_margin="10dp"
            android:gravity="center"
            />

    </LinearLayout>
    <Button
        android:id="@+id/btnEsqueceu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textColor="#112E51"
        android:text="Esqueceu a Senha?"/>
    <Button
        android:id="@+id/btnVersao"
        android:layout_marginTop="95dp"
        android:layout_width="wrap_content"
        android:textSize="9dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textColor="#112E51"
        android:text="VersÃ£o: 3.12.85t"/>
